{
  "compilerOptions": {
      "target": "ES2015",
      "module": "NodeNext",
      "noEmit": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "moduleResolution": "NodeNext",
      "allowImportingTsExtensions": true,
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}
